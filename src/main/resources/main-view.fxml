<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<VBox alignment="CENTER" spacing="15" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.cooper.cryptanalyzer.controllers.ui.MainController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Заголовок -->
    <Label text="Криптоанализатор" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
        <font>
            <Font name="System Bold" size="24"/>
        </font>
    </Label>

    <!-- Поле ввода с подсказкой -->
    <Label text="Введите текст или загрузите файл:" style="-fx-font-weight: bold;"/>
    <TextArea fx:id="inputTextArea" promptText="Введите текст..." VBox.vgrow="ALWAYS" minHeight="100"/>

    <!-- Поле ввода ключа -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Ключ (число):" minWidth="100"/>
        <TextField fx:id="keyField" promptText="Введите ключ" HBox.hgrow="ALWAYS"/>
        <Button text="📂 Выбрать файл" onAction="#selectInputFile"/>
    </HBox>

    <!-- Кнопки действий -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="encodeButton" text="🔒 Зашифровать" onAction="#handleEncode"/>
        <Button fx:id="decodeButton" text="🔓 Расшифровать" onAction="#handleDecode"/>
        <Button fx:id="bruteForceButton" text="🔓 Брут-форс" onAction="#handleBruteForce"/>
        <Button text="🗑️ Очистить" onAction="#clearAllFields"/>
        <Button text="❓ Справка" onAction="#showHelp"/>
    </HBox>

    <!-- Индикатор прогресса -->
    <ProgressBar fx:id="progressBar" prefWidth="Infinity" visible="false" progress="-1.0"/>

    <!-- Поле вывода -->
    <Label text="Результат:" style="-fx-font-weight: bold;"/>
    <HBox spacing="10" alignment="CENTER">
        <TextArea fx:id="outputTextArea" promptText="Результат обработки" VBox.vgrow="ALWAYS" editable="false" minHeight="100" HBox.hgrow="ALWAYS"/>
        <VBox spacing="5" alignment="CENTER">
            <Button text="➡" onAction="#copyOutputToInput" minWidth="40"/>
            <Button text="💾" onAction="#saveOutputFile" minWidth="40"/>
        </VBox>
    </HBox>

    <!-- Подсказка и статус -->
    <HBox spacing="10" alignment="CENTER">
        <Label fx:id="hintLabel" text="" style="-fx-font-size: 12px; -fx-text-fill: #666666;" HBox.hgrow="ALWAYS"/>
        <Label fx:id="statusLabel" text="" style="-fx-font-size: 12px;"/>
    </HBox>

    <stylesheets>
        <URL value="@css/style.css"/>
    </stylesheets>
</VBox>